@model CarViewModel

@{
    ViewBag.Title = "Car Delete";
    var imgPath = Model.ImagePath ?? "no-image.jpg";
}

<h2 class="col-md-6 mx-auto text-center">@ViewBag.Title</h2>

<div class="col-md-6 mx-auto">
    <div class="card mb-3">
        <img class="card-img-top" src="~/images/@imgPath" alt="Product image" style="height: 320px; border-bottom: 1px solid lightgray;" asp-append-version="true">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this car?</h4>
            <hr />
            <h5 class="card-title">@Model.Make @Model.Model</h5>
            <p class="card-text">Year: @Model.Year</p>
            <p class="card-text">Price for one day: <strong>@Model.PricePerDay USD</strong></p>
            <p class="card-text"><small class="text-muted">@(Model.IsAvailable ? "Available" : "Not Available")</small></p>
            <hr />
            <form asp-action="ConfirmDelete">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary float-right">Cancel</a>
            </form>
        </div>
    </div>
</div>