@model ClientViewModel

@{
    ViewBag.Title = "Client Delete";
}

<h2 class="col-md-6 mx-auto text-center">@ViewBag.Title</h2>

<div class="col-md-6 mx-auto">
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this client?</h4>
            <hr />
            <h5 class="card-title">Name: @Model.FullName</h5>
            <p class="card-text">Email: @Model.Email</p>
            <p class="card-text">Age: @Model.Age</p>
            <p class="card-text">Gender: @Model.Gender</p>
            <hr />
            <form asp-action="ConfirmDelete">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary float-right">Cancel</a>
            </form>
        </div>
    </div>
</div>